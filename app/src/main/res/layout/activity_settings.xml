<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alif.popularmovies.SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_title_order_by"
        android:textColor="#000000"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbtn_by_popularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#e9802f"
            android:checked="true"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rbtn_by_popularity_text"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rbtn_by_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#e9802f"
            android:onClick="onRadioButtonClicked"
            android:text="@string/rbtn_by_rate_text"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RadioGroup>
</LinearLayout>
